<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_item_resultado"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content"
              android:text="Resultado"
              android:padding="10dp"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:layout_gravity="center"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="EmprÃ©stimo:"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/txt_valor_emprestimo"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Primeira Parcela:"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/txt_vencimento"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Carencia:"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/txt_carencia"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Qtde de Parcelas:"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/txt_qtde_parcela"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Valor da Parcela:"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/txt_valor_parcela"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Valor Total:"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/txt_valor_total"
                  android:padding="10dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button android:layout_width="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:id="@+id/btn_copiar_texto"
            android:text="Copiar Texto"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:textColor="@android:color/white"
            android:layout_margin="30dp"
            android:layout_height="wrap_content"/>

</LinearLayout>